<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dd"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/usb_1"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="76dp"
        android:text="USB Bluetooth Music Receiver HJX-001- Biến loa thường thành loa bluetooth"
        android:textColor="#171616"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="27dp"
        android:text="Cực kỳ hài lòng"
        android:textAlignment="center"
        android:textColor="#171616"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="169dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="35dp"
        android:drawableLeft="@drawable/camera_1"
        android:text="Thêm hình ảnh"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#171616"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="349dp"
        android:layout_height="198dp"
        android:text="Hãy chi sẻ những điều mà bạn thích về sản phẩm"
        android:textAlignment="center"
        android:textColor="#686262"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://meet.google.com/nsj-ojwi-xpp"
        android:textColor="#121111"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="255dp"
        android:layout_height="39dp"
        android:background="#1737EC"
        android:text="Gửi"
        app:iconTint="#1637ED"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="655dp" />
</androidx.constraintlayout.widget.ConstraintLayout>