<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ttaa"
    android:backgroundTint="#EDC106"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:backgroundTint="#1E1C1C"
        android:text="Login"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="463dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:rotationX="0"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#131313"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="218dp"
        android:layout_height="29dp"
        android:text="Forgot your password"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="561dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="382dp"
        android:layout_height="56dp"
        android:background="#FDE829"
        android:drawableLeft="@drawable/avatar_user_1"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#1C1B1B"
        android:textDirection="ltr"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:background="#FFEA31"
        android:drawableLeft="@drawable/vector"
        android:drawableRight="@drawable/vector__1_"
        android:text="Password"
        android:textColor="#171616"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="325dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>